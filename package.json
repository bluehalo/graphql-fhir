{
	"name": "graphql-fhir",
	"version": "1.2.4",
	"description": "A Javascript based GraphQL FHIR server",
	"main": "index.js",
	"author": "Robert-W <rwinterbottom@asymmetrik.com>",
	"license": "MIT",
	"private": false,
	"scripts": {
		"start": "cross-env NODE_ENV=production node src/index",
		"nodemon": "cross-env NODE_ENV=development node src/scripts/nodemon",
		"test": "cross-env NODE_ENV=test node src/scripts/test",
		"prettier": "prettier \"src/**/*.js\" --write",
		"lint": "eslint \"src/**/*.js\"",
		"changelog": "conventional-changelog -p angular -s -i CHANGELOG.md"
	},
	"prettier": {
		"trailingComma": "all",
		"singleQuote": true
	},
	"dependencies": {
		"@asymmetrik/sof-graphql-invariant": "^2.0.0-rc1",
		"@asymmetrik/sof-strategy": "^1.0.2",
		"body-parser": "^1.18.3",
		"compression": "^1.7.2",
		"cross-env": "^7.0.3",
		"express": "^4.16.3",
		"express-graphql": "^0.6.12",
		"glob": "^7.1.2",
		"graphql": "^15.5.3",
		"graphql-outfields": "^0.9.1",
		"helmet": "^4.6.0",
		"moment-timezone": "^0.5.21",
		"nodemon": "^2.0.12",
		"passport": "^0.4.0",
		"passport-http-bearer": "^1.0.1",
		"sanitize-html": "^2.5.1",
		"superagent": "^6.1.0",
		"validator": "^13.6.0",
		"winston": "^3.0.0",
		"xss": "^1.0.3"
	},
	"devDependencies": {
		"conventional-changelog-cli": "^2.1.1",
		"coveralls": "^3.0.2",
		"eslint": "^7.32.0",
		"jest": "^27.2.0",
		"prettier": "^2.4.1"
	},
	"resolutions": {
		"graphql": "^15.3.0"
	},
	"jest": {
		"verbose": true,
		"collectCoverage": true,
		"coverageReporters": [
			"text",
			"lcov",
			"json"
		],
		"setupFiles": [
			"<rootDir>/src/environment.js"
		],
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/src/scripts/"
		],
		"coveragePathIgnorePatterns": [
			"<rootDir>/src/environment.js",
			"<rootDir>/src/resources/"
		]
	}
}
